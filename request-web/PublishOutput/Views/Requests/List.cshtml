    static string ServiceStateToClassName(string status)
    {
        switch (status)
        {
            case "В работе":
                return "inprogress";
            case "Закрыта":
                return "completed";
            //case ServiceState.Cancelled:
            //    return "cancelled";
            default:
                return "new";
        }

    }
}
