@model request_web.Models.ChangeStatusModel
@{
    ViewBag.Title = "Редактирование статуса";
    Layout = null;
}
@using (Html.BeginForm("ChangeStatus", "Requests", FormMethod.Post, new {@class = "FromFORM"}))
{

    <div class="modal-content" style="height: 210px">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Редактирование статуса</h4>
        </div>
        @Html.HiddenFor(m => m.RequestId)
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Текущий статус:</dt>
                <dd>@Html.DisplayFor(model => model.Status)</dd>
            </dl>
            <dl class="dl-horizontal">
                <dt>Новый статус:</dt>
                <dd>@Html.DropDownListFor(m => m.CurrentStatus, Model.StatusList, new { @class = "selects" })</dd>
            </dl>
            <div>
                <input type="submit" value="Сохранить" id="Enter" class="btn form-group btn-primary pull-right" />
                <input type="submit" value="Отмена" data-dismiss="modal" area-hidden="true" class="btn form-group btn-primary pull-right" style="margin-right: 10px" />
                @*<button class="close btn form-group btn-primary pull-right" data-dismiss="modal" area-hidden="true">Отмена</button>*@
            </div>

        </div>
    </div>
}