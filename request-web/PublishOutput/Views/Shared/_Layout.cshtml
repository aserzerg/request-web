<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CMS24</title>
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/jqueryui", "~/Scripts/jquery-ui-datepicker-ru.js", "~/bundles/inputmasks", "~/bundles/jqueryval", "~/Chosen/chosen.jquery.min.js")
    @Styles.Render("~/Content/css", "~/Chosen/chosen.css")
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                 @Html.Label("ЦМС 24",new {@class = "navbar-brand", style = "width: 120px;"})
                @*@Html.Label("ЦМС24", new { @class = "h4 control-label"})*@
                    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Заявки", "List", "Requests")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Статистика", "GeneralInfo", "Stat")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Выход", "Logout", "Account")</li>
                </ul>
                @*<ul class="nav nav-pills">
                        <li>
                            @Html.ActionLink("Здравствуйте " + Context.User.Identity.Name + "!", null, null, new { title = "Редактировать профиль" })
                        </li>
                        <li>
                            @Html.ActionLink("Выход", "Logout", "Account")
                        </li>
                    </ul>*@

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
