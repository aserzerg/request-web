@model request_web.Models.AddNoteModel
@{
    ViewBag.Title = "Добавить комментарий";
    Layout = null;
}
@using (Html.BeginForm("AddNote", "Requests", FormMethod.Post, new {@class = "FromFORM"}))
{

    <div class="modal-content" style="height: 260px">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Добавить комментарий</h4>
        </div>
        @Html.HiddenFor(m => m.RequestId)
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>Комментарий:</dt>
                <dd>@Html.TextAreaFor(m => m.Note, new {style = "max-width: 480px; width:100%; height:100px;" })</dd>
            </dl>
            <div>
                <input type="submit" value="Сохранить" id="Enter" class="btn form-group btn-primary pull-right" />
                <input type ="submit" value="Отмена" data-dismiss="modal" area-hidden="true" class="btn form-group btn-primary pull-right" style="margin-right: 10px" />
                @*<button class="close btn form-group btn-primary pull-right" data-dismiss="modal" area-hidden="true">Отмена</button>*@
            </div>

        </div>
    </div>
}